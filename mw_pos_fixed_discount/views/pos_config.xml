<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="cs_pos_config_settings_pos_fixed_discount" model="ir.ui.view">
        <field name="name">pos.config.settings.pos.fixed.discount</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <h2>Order Line Fixed Discount</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-xs-6 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="enable_fixed_discount" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="enable_fixed_discount" />
                            <div class="text-muted" id="order_fixed_discount" >
	                            Allow to Set Fixed Discount On Order Lines.
	                        </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
    
</odoo>
